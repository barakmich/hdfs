package cmd

import "github.com/spf13/cobra"

func init() {
	rootCmd.AddCommand(mkdirCmd)
	mkdirCmd.PersistentFlags().BoolVarP(&mkdirAllOpt, "parents", "p", false, "no error if existing, make parent directories")
}

var (
	mkdirAllOpt bool
)

var mkdirCmd = &cobra.Command{
	Use:   "mkdir [-p] FILE...",
	Short: "concatenate HDFS files and print on the standard output",
	RunE:  mkdirRun,
	DisableFlagsInUseLine: true,
}

func mkdirRun(cmd *cobra.Command, args []string) error {
	return cmd.Help()
}
